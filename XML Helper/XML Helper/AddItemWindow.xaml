<Window x:Class="XML_Helper.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить данные" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Фамилия:" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="SurnameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>
        
        <TextBlock Text="Имя:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Месяц:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox x:Name="MonthComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

        <TextBlock Text="Сумма:" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="AmountTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelBtn" Content="Отмена" IsCancel="True" Width="90" Margin="0,0,8,0"/>
            <Button x:Name="AddBtn" Content="Добавить" IsDefault="True" Width="100" Click="AddBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
