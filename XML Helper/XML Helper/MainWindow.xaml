<Window x:Class="XML_Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_Helper"
        mc:Ignorable="d"
        Title="XML Helper" Height="480" Width="1200" MinHeight="480" MinWidth="1200" Icon="/mainWindowIcon.ico">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="Выход" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DataGrid Name="dgEmployees" AutoGenerateColumns="False" MinHeight="300" Grid.Row="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="*"/>
                    <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*"/>
                    <DataGridTextColumn Header="Январь" Binding="{Binding January}" Width="*"/>
                    <DataGridTextColumn Header="Февраль" Binding="{Binding February}" Width="*"/>
                    <DataGridTextColumn Header="Март" Binding="{Binding March}" Width="*"/>
                    <DataGridTextColumn Header="Апрель" Binding="{Binding April}" Width="*"/>
                    <DataGridTextColumn Header="Май" Binding="{Binding May}" Width="*"/>
                    <DataGridTextColumn Header="Июнь" Binding="{Binding June}" Width="*"/>
                    <DataGridTextColumn Header="Июль" Binding="{Binding July}" Width="*"/>
                    <DataGridTextColumn Header="Август" Binding="{Binding August}" Width="*"/>
                    <DataGridTextColumn Header="Сентябрь" Binding="{Binding September}" Width="*"/>
                    <DataGridTextColumn Header="Октябрь" Binding="{Binding October}" Width="*"/>
                    <DataGridTextColumn Header="Ноябрь" Binding="{Binding November}" Width="*"/>
                    <DataGridTextColumn Header="Декабрь" Binding="{Binding December}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0">
                <StackPanel Margin="0, 0, 15, 0">
                    <Button Name="ChooseDataFileBtn" Content="Выбрать data-файл" 
                        Click="ChooseDataFileBtn_Click" Width="150" Height="35" Cursor="Hand"/>
                    <TextBlock Name="DataFilePathText" Foreground="Gray"
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>


                <StackPanel Margin="0, 0, 15, 0">
                    <Button Name="ChooseXsltFileBtn" Content="Выбрать XSLT-файл" 
                        Click="ChooseXsltFileBtn_Click" Width="150" Height="35"
                        Cursor="Hand"/>
                    <TextBlock Name="XsltFilePathText" Foreground="Gray" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Margin="0, 0, 15, 0">
                    <Button Name="AddDataBtn" Content="Добавить данные" 
                        Click="AddDataBtn_Click" Width="150" Height="35"
                        Cursor="Hand" IsEnabled="False"/>
                </StackPanel>

                <StackPanel>
                    <Button Name="ShowSalariesInfoBtn" Content="Показать данные" 
                        Click="ShowSalariesInfoBtn_Click" Width="150" Height="35"
                        Cursor="Hand" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
