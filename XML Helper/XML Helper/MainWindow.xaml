<Window x:Class="XML_Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XML_Helper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Button Name="ConvertBtn" Content="Запустить преобразование" Click="ConvertBtn_Click" Height="30" Margin="0,0,0,10"/>

            <DataGrid Name="dgEmployees" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="*"/>
                    <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*"/>
                    <DataGridTextColumn Header="Январь" Binding="{Binding January}" Width="*"/>
                    <DataGridTextColumn Header="Февраль" Binding="{Binding February}" Width="*"/>
                    <DataGridTextColumn Header="Март" Binding="{Binding March}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
